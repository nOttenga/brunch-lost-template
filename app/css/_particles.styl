
.falling-star{
  background:#fff;
  border-radius: 50%;
  border: #fff 1px solid;
  opacity: 1;
  position: absolute;
  top: -10px;
  left: 400px;
  z-index: 0;

  -webkit-box-shadow:  0px 0px 2px 1px #B0CDFF;
  -moz-box-shadow:  0px 0px 2px 1px #B0CDFF;
  box-shadow: 0px 0px 2px 1px #B0CDFF;

  transition-property: left, top, opacity;
  transition-duration: 1.2s;
  transition-timing-function: ease-in;
}

.go-falling{
  position: absolute;
  top:  1280px ; /* as height as the wrapper*/
  opacity: 0;
}
